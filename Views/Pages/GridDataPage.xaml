<Page x:Class="UIDesignerWPFUI.Views.Pages.GridDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UIDesignerWPFUI.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      ScrollViewer.VerticalScrollBarVisibility="Disabled"
      Title="GridDataPage">

    <Grid VerticalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition  MinWidth="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ui:ListView Grid.Column="0" VerticalAlignment="Stretch"
                     ItemsSource="{Binding ViewModel.Columns}"
                     SelectedItem="{Binding ViewModel.SelectedColumn, Mode=TwoWay}">
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <GridSplitter Grid.Column="1" ResizeBehavior="PreviousAndCurrent" Width="4" HorizontalAlignment="Center" Background="{DynamicResource ControlStrokeColorDefaultBrush}" ResizeDirection="Columns" />

        <StackPanel Grid.Column="2" VerticalAlignment="Top" Height="Auto" Margin="5">
            <ui:Button Appearance="Primary" Command="{Binding ViewModel.PreviewGridCommand}">Preview</ui:Button>

            <GroupBox Header="Data">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="5"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Tip kolone:" TextWrapping="Wrap"></ui:TextBlock>
                    <ui:TextBox Grid.Row="0" Grid.Column="2" Text="{Binding ViewModel.SelectedColumn.ColumnType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"></ui:TextBox>

                    <ui:TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Sirina:" TextWrapping="Wrap"></ui:TextBlock>
                    <ui:TextBox Grid.Row="1" Grid.Column="2" Text="{Binding ViewModel.SelectedColumn.Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"></ui:TextBox>

                    <CheckBox Grid.Row="2" Grid.Column="2" IsChecked="{Binding ViewModel.SelectedColumn.IsVisible, Mode=TwoWay}" Content="Vidljivo"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page>
