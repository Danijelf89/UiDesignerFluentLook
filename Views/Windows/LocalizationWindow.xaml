<ui:FluentWindow x:Class="UIDesignerWPFUI.Views.Windows.LocalizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIDesignerWPFUI.Views.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Normal"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        Title="LocalizationWindow" SizeToContent="Height" Width="400"
        >



    <Grid >


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ui:TitleBar Grid.Column="2" HorizontalAlignment="Right"
            x:Name="TitleBar"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True"
        />

        <ui:TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5">Display name key:</ui:TextBlock>
        <ui:TextBox Grid.Row="1" Grid.Column="2" Margin="5" HorizontalAlignment="Left" Width="350">ui.key.test</ui:TextBox>

        <ui:TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center">Translation:</ui:TextBlock>
        <ui:TextBox Grid.Row="2" Grid.Column="2" Margin="5" HorizontalAlignment="Left" Width="350">Test</ui:TextBox>

        <StackPanel Grid.Row="3" Grid.Column="2"  HorizontalAlignment="Right" Orientation="Horizontal" Margin="5,2">
            <ui:Button Appearance="Primary" Margin="5,0">Save</ui:Button>
            <ui:Button Appearance="Danger" Margin="5,0">Cancel</ui:Button>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
