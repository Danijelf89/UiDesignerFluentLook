<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>

    <system:Double x:Key="DefaultFontSize">14.3</system:Double>
    <system:Double x:Key="NormalFontSize">14.3</system:Double>
    <system:Double x:Key="LargeFontSize">16</system:Double>
    <system:Double x:Key="SmallFontSize">12</system:Double>

</ResourceDictionary>